{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "example/web/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./tests",
    "./dist",
    "./backup"
  ],
  "compileOnSave": false
}
