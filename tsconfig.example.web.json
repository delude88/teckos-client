{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "es6"
    ],
    "outDir": "example/dist/web"
  },
  "include": [
    "example/src/web/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "compileOnSave": false
}
