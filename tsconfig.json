{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es5",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./tests",
    "./dist",
    "./backup",
    "./example"
  ]
}